    <div class="report-frame">
        <div class="report-header">
            <table class="table table-secondary table-striped table-hover table-bordered">
                <thead>
                    <tr class="align-center">
                        <th scope="col" class="table-options">#</th>
                        <th scope="col" class="">Item Id</th>
                        <th scope="col" >Item Description</th>
                        <th scope="col">On Hand</th>
                        <th scope="col">Order Point</th>
                        <th scope="col">Sell Price</th>
                        <th scope="col">UOM</th>
                        <th scope="col" class=""></th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((item, index) => { %>
                    <tr class="proper-case">
                        <td class="align-center"><%= index + 1 %></td>
                        <td class="table-column-md no-overflow"><%= item.itemId %></td>
                        <td class="table-column-lg no-overflow"><%= item.itemDescription %></td>
                        <td class="align-right table-column-small"><%= item.onHand %></td>
                        <td class="align-right table-column-small"><%= item.reOrderPoint %></td>
                        <td class="align-right table-column-small">$<%= item.sellPrice %></td>
                        <td class="table-column-small no-overflow"><%= item.unitOfMeasure %></td>
                        <td class="table-options">
                            <a href="/inventory/view-item-id=<%= item._id %>" class="table-delete-sm">
